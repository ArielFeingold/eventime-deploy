<div class="row">
  <div class="col-sm-6 mx-auto pt-5">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title pb-3 text-center">Edit Comment</h5>

          <div id="error_explanation">
            <table class="table table-borderless">
              <tbody>
                <% @comment.errors.full_messages.each do |msg| %>
                  <tr class="table-danger"><td>&nbsp &nbsp <%= msg %></td></tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <%= form_for @comment do |f| %>

            <div class="form-group">
              <%= f.text_area :content, class: "form-control"%>
            </div>

            <div class="actions">
              <br/>
                <%= f.submit "Edit Comment", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
