<div class="row">
  <div class="col-sm-6 mx-auto pt-5">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title pb-3 text-center">Edit <%=@location.name.titleize%></h5>
        <% if @location.errors.any? %>
          <div id="error_explanation">
            <table class="table table-borderless">
              <tbody>
                <% @location.errors.full_messages.each do |msg| %>
                  <tr class="table-danger"><td>&nbsp &nbsp <%= msg %></td></tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
        <%= render 'form' %>
          <%= form_tag user_location_path(current_user, @location), method: "delete" do -%>
            <div><%= submit_tag 'Delete Location', class: 'btn btn-link mt-3' %></div>
          <% end -%>
        </div>
      </div>
    </div>
  </div>
