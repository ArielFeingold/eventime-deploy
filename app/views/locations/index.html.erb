<div class="row">
  <div class="col-sm-10 mx-auto pt-5">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title pb-3 text-center">Your Locations</h5>
        <table class="table table-dark">
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col">Name</th>
              <th scope="col">Address</th>
              <th scope="col">City, State</th>
            </tr>
          </thead>
          <tbody>
          <%@user_locations.each do |location|%>
            <tr>
             <th scope="row"></th>
             <td><%=link_to location.name.titleize, user_location_path(location.user, location)%></td>
             <td><%=location.address.titleize%></td>
             <td><%=location.city.titleize%>, <%=location.state.titleize%></td>
           </tr>
         <%end%>
       </tbody>
      </table>
          <%= link_to '<button type="button" class="col-sm-8 mx-auto btn btn-primary btn-lg btn-block">Create New Location</button>'.html_safe, new_user_location_path(current_user) %>
    </div>
  </div>
<div class="col-sm-12 mx-auto pt-5">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title pb-3 text-center">Public Locations Nearby</h5>
        <table class="table table-dark">
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col">Name</th>
              <th scope="col">Address</th>
              <th scope="col">City, State</th>
            </tr>
          </thead>
        <tbody>
          <%@public_locations_nearby.each do |location|%>
            <tr>
             <th scope="row"></th>
             <td><%=link_to location.name.titleize, user_location_path(location.user, location)%></td>
             <td><%=location.address.titleize%></td>
             <td><%=location.city.titleize%>, <%=location.state.titleize%></td>
           </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
