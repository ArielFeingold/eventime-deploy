<%if current_user.present?%>
  <p>You are already logged in</p>
<%else%>
  <div class="row">
    <div class="col-sm-6 mx-auto pt-5">
      <div class="card">
        <div class="card-body">
          <h5 class="text-center pb-3">Welcome Back!</h5>
          <%= link_to('Log in with Facebook!', '/auth/facebook', class:"btn btn-primary btn-block mb-4")%>
          <p class="text-center">or</p>
          <hr>
          <h5 class="card-title pb-3">Log-in To Your Account</h5>
            <div class="container">
               <% flash.each do |message_type, message| %>
                 <div class="alert alert-<%= message_type %>"><%= message %></div>
               <% end %>
            </div>
          <%= form_for(:session, url: login_path) do |f| %>

          <div class="form-group">
          <%= f.label :email %>
          <br>
          <%= f.email_field :email, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <br>
            <%= f.password_field :password, class: "form-control" %>
          </div>

            <div class="actions">
              <br/>
              <%= f.submit "Log In", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <%end%>
