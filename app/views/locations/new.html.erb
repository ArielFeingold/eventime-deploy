<div class="row">
  <div class="col-sm-8 mx-auto pt-5">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title pb-3 text-center">Add a Location</h5>
          <% if @location.errors.any? %>
            <div id="error_explanation">
              <table class="table table-borderless">
                <tbody>
                  <% @location.errors.full_messages.each do |msg| %>
                    <tr class="table-danger"><td>&nbsp &nbsp <%= msg %></td></tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% end %>
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>
